<h3>Rental Items</h3>

<ul>
  {{#each availItems as |item|}}

  <li>
    <article>
      <div class="row mb-2">
        <div class="col-md-8">
          <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2 text-primary">{{item.category_id}}</strong>
              <h3 class="mb-0">
                <a class="text-dark" href="#">{{item.name}}</a>
              </h3>
              <div class="mb-1 text-muted">Subtitle</div>
              <p class="card-text mb-auto">
                {{item.description}}
              </p>
              <a href="#">Call to Action</a>
            </div>
            <img class="card-img-right flex-auto d-none d-md-block" alt="alt text" style="width: 200px;"
              src="{{item.img_url}}">
          </div>
        </div>
      </div>
    </article>
  </li>
  {{/each}}
</ul>